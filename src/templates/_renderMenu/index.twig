{% import _self as macros %}
{% macro menu(node) %}
    {% import _self as macros %}
    {% set Grandchildren = craft.Navigation.renderChildren(node) %}
    {% if Grandchildren | length > (0) %}
        <ul>
            {% for grandchildren in Grandchildren  %}

                <li>
                    <a href="/{% if craft.entries.id(grandchildren.NodeId).first().uri is defined %}{{craft.entries.id(grandchildren.NodeId).first().uri}}{% else %}{{ grandchildren.menuUrl }}  {% endif %}">{{ grandchildren.NodeName }}</a>
                    {{ macros.menu(grandchildren.NodeId) }}

                </li>
            {% endfor %}

        </ul>


    {% endif %}

{% endmacro %}




<div class="{% if menucss.wrapperClass is defined %} {{ menucss.wrapperClass }} {% endif %}">
<ul class="{% if menucss.ulClass is defined %} {{ menucss.ulClass }}{% endif %}">

   {% if MenuNodes is defined  %}
        {% if MenuNodes is iterable %}

            {% for MenuNode in MenuNodes %}

                   {% if MenuNode.ParenNode == (0)  %}

                       {% if craft.Navigation.renderChildren(MenuNode.NodeId) is iterable %}
                           <li class="{% if menucss.listClass is defined %} {{ menucss.listClass }} {% endif %}">
                               <a href="/{% if craft.entries.id(MenuNode.NodeId).first().uri is defined %}{{craft.entries.id(MenuNode.NodeId).first().uri}}{% else %}{{ MenuNode.menuUrl }}  {% endif %}">{{ MenuNode.NodeName }}</a>
                               <ul>
                                  {% for childrenMenu in  craft.Navigation.renderChildren(MenuNode.NodeId) %}
                                      <li>
                                          <a href="/{% if craft.entries.id(childrenMenu.NodeId).first().uri is defined %}{{craft.entries.id(childrenMenu.NodeId).first().uri}}{% else %}{{ childrenMenu.menuUrl }}  {% endif %}">{{ childrenMenu.NodeName }}</a>
                                          {{ macros.menu(childrenMenu.NodeId) }}

                                      </li>
                                   {% endfor %}

                               </ul>
                           </li>
                           {% else %}

                        {% endif %}
                {% else %}
                    {% endif %}

            {% endfor %}
            {% endif %}
{% else %}
 {% endif %}

</ul>

</div>